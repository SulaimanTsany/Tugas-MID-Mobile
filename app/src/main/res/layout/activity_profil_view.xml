<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfilViewActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:paddingTop="15dp"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:background="@drawable/border_shadow"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <com.datasains.diss.tugas_mid_kelompok7.FontAwesome
                    android:text="&#xf007;"
                    android:textSize="36sp"
                    android:textColor="#000"
                    android:layout_marginEnd="20dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/name"
                    android:text="name"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="@color/colorPrimary"/>
            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <com.datasains.diss.tugas_mid_kelompok7.FontAwesome
                    android:text="&#xf095;"
                    android:textSize="24sp"
                    android:textColor="#1aa831"
                    android:layout_marginEnd="20dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/phone"
                    android:text="phone"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <com.datasains.diss.tugas_mid_kelompok7.FontAwesome
                    android:text="&#xf073;"
                    android:textSize="24sp"
                    android:textColor="#cc0407"
                    android:layout_marginEnd="20dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/birthday"
                    android:text="birthday"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <com.datasains.diss.tugas_mid_kelompok7.FontAwesome
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:text="&#xf228;"
                    android:textColor="#ffc907"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/gender"
                    android:text="gender"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <com.datasains.diss.tugas_mid_kelompok7.FontAwesome
                    android:text="&#xf041;"
                    android:textSize="24sp"
                    android:textColor="#bc0303"
                    android:layout_marginEnd="20dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/address"
                    android:text="address"
                    android:textSize="18sp"
                    android:paddingEnd="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <com.datasains.diss.tugas_mid_kelompok7.FontAwesome
                    android:text="&#xf212;"
                    android:textSize="24sp"
                    android:textColor="#9e9e9e"
                    android:layout_marginEnd="20dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/religion"
                    android:text="religion"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">
                <com.datasains.diss.tugas_mid_kelompok7.FontAwesome
                    android:text="&#xf0e0;"
                    android:textSize="24sp"
                    android:textColor="#f4424b"
                    android:layout_marginEnd="20dp"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"/>
                <TextView
                    android:id="@+id/email"
                    android:text="email"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <Space
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <Button
                android:onClick="editProfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_primary"
                android:paddingBottom="5dp"
                android:text="Edit Profile"
                android:textColor="#fff"
                android:textSize="18sp"/>

            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:onClick="delete"
                    android:layout_weight="1"
                    android:background="@drawable/button_danger"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"/>

                <Button
                    android:onClick="logout"
                    android:layout_weight="1"
                    style="?android:textAppearanceSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Logout"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</ScrollView>