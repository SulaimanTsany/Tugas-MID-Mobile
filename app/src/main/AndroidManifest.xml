<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.datasains.diss.tugas_mid_kelompok7">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_whatshot_black_128dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_whatshot_black_128dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".ProfilViewActivity" />
        <activity android:name=".EditProfilActivity"
            android:windowSoftInputMode="stateHidden"></activity>
    </application>

</manifest>